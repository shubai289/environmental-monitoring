<view class="v1">
 <!-- v2父容器  子view使用绝对布局 -->
   <view class="v2">
     <view class="dltext">登录</view>
  
     <!-- 手机号 -->
     <view class="phoneCs">
       <image src="/images/phone.png" class="ph"></image>
       <input name="phone" placeholder="请输入手机号" type="number" bindinput="content"/>
     </view>
  
     <!-- 密码 -->
     <view class=passwordCs">
       <image src="/images/password.png" class="ps"></image>
       <input name="password" placeholder="请输入密码" type="password" bindinput="password" />
       <!-- 
       <image src="/images/eye-open.png" class="eye" bindlongpress="onkeydown"></image>
        -->
     </view>
     
     <!-- 注册 和忘记密码  -->
     <view class="zhuce">
       <navigator url="../register/register">立即注册</navigator>
       <navigator>忘记密码?</navigator>
     </view>

     <!-- 登录按钮 -->
     <view class="denglu">
       <button class="btn-dl" type="primary" bindtap="goadmin">登录</button>
     </view>

     <!-- 协议区  xieyi -->
     <view class="xieyi">
      <checkbox-group class="isXY" bindchange="check">
       <checkbox checked="{{isChecked}}" value="{{checkboxValue}}"></checkbox>
       </checkbox-group>
       <view class="text-xy">同意微信小程序《使用协议》</view>
     </view>
   </view>

 </view>
  