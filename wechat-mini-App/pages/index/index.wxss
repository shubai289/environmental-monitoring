.userinfo {
  margin-top: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.loginButton{
  width: 250rpx;
  height: 60rpx;
  position: absolute;
  margin-top: 750rpx;
  
}
/* 登录按钮 */
.loginButton button{
  padding: 0rpx;
  line-height: 60rpx;
  font-size: 35rpx;
  width: 100%;
  height: 100%;
  border-radius: 25rpx;
}